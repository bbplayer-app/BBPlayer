{
	"name": "bbplayer-root",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
		"format": "eslint . --fix && oxfmt --write .",
		"lint": "eslint .",
		"postinstall": "lefthook install"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@dword-design/eslint-plugin-import-alias": "^6.0.3",
		"@eslint/js": "^9.39.2",
		"@tanstack/eslint-plugin-query": "^5.91.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-compiler": "19.1.0-rc.1",
		"eslint-plugin-react-hooks": "6.0.0-rc1",
		"eslint-plugin-react-hooks-extra": "^1.53.1",
		"eslint-plugin-react-you-might-not-need-an-effect": "^0.5.6",
		"oxfmt": "^0.27.0",
		"typescript-eslint": "^8.53.1"
	},
	"packageManager": "pnpm@10.26.2"
