{
	"name": "bbplayer-root",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check:deps": "syncpack list-mismatches",
		"fix:deps": "syncpack fix-mismatches",
		"format": "oxfmt --write .",
		"lint": "oxlint --type-aware && eslint .",
		"lint:fix": "oxlint --type-aware --fix && eslint . --fix",
		"postinstall": "lefthook install"
	},
	"devDependencies": {
		"@bbplayer/eslint-plugin": "workspace:*",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@dword-design/eslint-plugin-import-alias": "^6.0.3",
		"@eslint/js": "^9.39.2",
		"@tanstack/eslint-plugin-query": "^5.91.3",
		"@types/node": "^25.0.10",
		"@typescript/native-preview": "7.0.0-dev.20260211.1",
		"eslint": "^9.39.2",
		"eslint-plugin-oxlint": "^1.46.0",
		"eslint-plugin-react-compiler": "19.1.0-rc.1",
		"eslint-plugin-react-hooks-extra": "^1.53.1",
		"eslint-plugin-react-you-might-not-need-an-effect": "^0.5.6",
		"lefthook": "^1.13.6",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.46.0",
		"oxlint-tsgolint": "^0.12.0",
		"syncpack": "^13.0.4",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.53.1"
	},
	"packageManager": "pnpm@10.26.2"
}
